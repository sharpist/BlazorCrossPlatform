@using Microsoft.AspNetCore.Components.Web
@namespace BlazorClassLibrary.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="_content/BlazorClassLibrary/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="_content/BlazorClassLibrary/css/site.css" rel="stylesheet" />
    <link href="_content/BlazorClassLibrary/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="BlazorCrossPlatform.styles.css" rel="stylesheet" />

    <!-- for water demo page -->
    <script src="_content/BlazorClassLibrary/water/OES_texture_float_linear-polyfill.js" type="text/javascript"></script>
    <script src="_content/BlazorClassLibrary/water/lightgl.js" type="text/javascript"></script>
    <script src="_content/BlazorClassLibrary/water/cubemap.js" type="text/javascript"></script>
    <script src="_content/BlazorClassLibrary/water/renderer.js" type="text/javascript"></script>
    <script src="_content/BlazorClassLibrary/water/water.js" type="text/javascript"></script>
    <script src="_content/BlazorClassLibrary/water/main.js" type="text/javascript"></script>

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <!-- water demo -->
    <img id="tiles" src="_content/BlazorClassLibrary/water/tiles.jpg" style="display: none" />
    <img id="xneg" src="_content/BlazorClassLibrary/water/xneg.jpg" style="display: none" />
    <img id="xpos" src="_content/BlazorClassLibrary/water/xpos.jpg" style="display: none" />
    <img id="ypos" src="_content/BlazorClassLibrary/water/ypos.jpg" style="display: none" />
    <img id="zneg" src="_content/BlazorClassLibrary/water/zneg.jpg" style="display: none" />
    <img id="zpos" src="_content/BlazorClassLibrary/water/zpos.jpg" style="display: none" />

    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js" type="text/javascript"></script>
</body>
</html>
